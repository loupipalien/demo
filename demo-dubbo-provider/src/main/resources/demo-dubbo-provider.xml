<?xml version="1.0" encoding="UTF-8"?>  
<beans xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
    http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd ">  
    
    <!-- 应用名 -->
    <dubbo:application name="${dubbo.application.name}" />
    <!-- zookeeper注册中心 -->  
    <dubbo:registry group="${dubbo.registry.group}" protocol="${dubbo.registry.protocol}" address="${dubbo.registry.address}" />  
    <!-- 注册协议服务协议与端口 ,可配置多协议-->
    <dubbo:protocol name="dubbo" port="20880" />

	<!-- 向注册中心注册暴露服务地址,注册服务;多协议时需要指定协议名,否则会在设置的协议中随机调用,就会一会成功一会失败 -->
	<dubbo:service protocol="dubbo" interface="com.ltchen.demo.dubbo.api.service.DemoService" ref="demoServiceImpl" />
	
</beans>